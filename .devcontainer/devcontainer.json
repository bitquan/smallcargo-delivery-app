{
  "name": "Flutter Development Environment",
  "image": "ghcr.io/cirruslabs/flutter:latest",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "dart.flutterSdkPath": "/opt/flutter",
        "dart.debugExternalPackageLibraries": false,
        "dart.debugSdkLibraries": false,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "forwardPorts": [3000, 5000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Flutter Web",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "flutter doctor && flutter pub get",
  
  "remoteUser": "root",
  
  "mounts": [
    "source=flutter-pub-cache,target=/root/.pub-cache,type=volume"
  ]
}
