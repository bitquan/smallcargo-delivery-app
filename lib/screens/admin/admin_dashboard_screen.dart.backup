                  title: 'Active Drivers',
                  value: '${dashboardStats['activeDrivers'] ?? 0}',
                  icon: Icons.local_shipping,
                  color: Colors.yellow,
                  trend: '${dashboardStats['totalDrivers'] ?? 0} total',
                  isPositive: true,
