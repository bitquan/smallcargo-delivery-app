          Row(
            children: [
              Expanded(
                child: _StatsCard(
                  title: 'Revenue Today',
                  value: '\$${(dashboardStats['todayRevenue'] ?? 0.0).toStringAsFixed(0)}',
                  icon: Icons.attach_money,
                  color: Colors.green,
                  trend: 'Month: \$${(dashboardStats['monthRevenue'] ?? 0.0).toStringAsFixed(0)}',
                  isPositive: true,
                ),
              ),
              const SizedBox(width: 12),
              Expanded(
                child: _StatsCard(
